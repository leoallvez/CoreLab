
@model Universidade.Models.Instituicao

@{
    Layout = "_LayoutIES";
    ViewBag.Title = "Instituicao";
}

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" disabled />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" disabled />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <label asp-for="Endereco" class="control-label"></label>
            <input asp-for="Endereco" class="form-control" disabled />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="button" data-toggle="modal" data-target="#modalCofirmationDelete" style="color: #ffffff" class="btn btn-danger">Delete</button>
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>
</form>

<div class="modal fade" id="modalCofirmationDelete" tabindex="-1" role="dialog" aria-labelledby="deleteModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Remoção de Instituição</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" &times;></span>
                </button>
            </div>
            <div class="modal-body">
                <p>Confirmar a exclusão do departamento @Model.Nome.ToUpper()?</p>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="InstituicaoID" />
                    <input type="submit" value="Remover Departamento" class="btn btn-primary" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                </form>
            </div>
        </div>
    </div>

</div>

@section CardHeader
    {
    <p>Delete</p>
}

