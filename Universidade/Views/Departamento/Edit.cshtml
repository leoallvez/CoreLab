@model Universidade.Models.Departamento

@{
    Layout = "_LayoutIES";
    ViewBag.Title = "Departamento";
}

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <label asp-for="InstituicaoID" class="control-label"></label>

            <select asp-for="InstituicaoID" class="form-control" asp-items="ViewBag.Instituicoes"></select>

        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <a value="Edit" class="btn btn-primary">Edit</a>
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>
</form>

@section CardHeader {
    <p>Edit</p>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

